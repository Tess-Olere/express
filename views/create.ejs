    <div>
        <label for="age">Age:</label><br>
        <input type="number" placeholder="type your age" id="age" name="age" required ><br>
    </div>
    <div>
        <label for="role">Role:</label><br>
        <input type="text" placeholder="type your role" id="role" name="role" required ><br>
    </div>
    <div>
        <!-- <input type="submit" value="Login"/> -->
